-- Create STORES Table--
CREATE TABLE STORES (
    store_id NUMBER(10) CONSTRAINT stores_store_id_pk PRIMARY KEY,
    partner_id NUMBER(10) CONSTRAINT stores_partner_id_nn NOT NULL,
    store_name VARCHAR2(100) CONSTRAINT stores_store_name_nn NOT NULL,
    category VARCHAR2(50) CONSTRAINT stores_category_nn NOT NULL
        CONSTRAINT stores_category_ck CHECK (category IN ('Restaurant', 'Beverage', 'Dessert', 'Fashion', 'Entertainment')),
    store_logo_url VARCHAR2(255),
    CONSTRAINT stores_partner_id_fk FOREIGN KEY (partner_id) REFERENCES PARTNERSHIPS(partnership_id)
);

