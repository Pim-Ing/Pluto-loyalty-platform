-- Create CUSTOMER_NOTIFICATION Table--
CREATE TABLE USER_NOTIFICATIONS (
    notification_id NUMBER(10) CONSTRAINT customer_notif_notif_id_pk PRIMARY KEY,
    customer_id NUMBER(10),
    noti_title VARCHAR2(100) CONSTRAINT customer_notif_title_nn NOT NULL,
    noti_description VARCHAR2(255) CONSTRAINT customer_notif_desc_nn NOT NULL,
    is_read NUMBER(1) DEFAULT 0 CONSTRAINT customer_notif_is_read_nn NOT NULL
        CONSTRAINT user_notif_is_read_ck CHECK (is_read IN (0, 1)),
    create_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP CONSTRAINT customer_notif_create_at_nn NOT NULL,
    CONSTRAINT user_notif_customer_id_fk FOREIGN KEY (customer_id) REFERENCES CUSTOMERS(customer_id)
);

